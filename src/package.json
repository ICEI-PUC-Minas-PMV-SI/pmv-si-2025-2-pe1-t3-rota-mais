{
  "name": "template-json-server-html-css-js",
  "version": "1.0.0",
  "description": "Template para iniciantes com JSON Server, HTML, CSS e JavaScript - Estrutura organizada",
  "main": "public/index.html",
  "scripts": {
    "start": "json-server --watch data/db.json --port 3000",
    "dev": "json-server --watch data/db.json --port 3000 --delay 1000",
    "build": "echo 'Projeto estático - não requer build'",
    "serve": "npx http-server public -p 8080 -o",
    "install-deps": "npm install",
    "setup": "npm run install-deps && echo 'Template configurado com sucesso!'"
  },
  "keywords": [
    "json-server",
    "html",
    "css",
    "javascript",
    "template",
    "iniciantes",
    "organizado"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "json-server": "^0.17.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/template-json-server.git"
  }
}
